# ScholarShield Backend - Production Environment Variables
# Copy this file and fill in your actual values
# DO NOT commit the actual .env file to version control

# ============================================
# REQUIRED - Azure Services
# ============================================

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure AI Document Intelligence Configuration
AZURE_FORM_RECOGNIZER_ENDPOINT=
AZURE_FORM_RECOGNIZER_KEY=

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_KEY=
AZURE_SEARCH_INDEX_NAME=university-policies

# ============================================
# OPTIONAL - Additional Azure Services
# ============================================

# Azure Translator Configuration (optional)
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=eastus

# Azure Speech Services Configuration (optional)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus

# ============================================
# PRODUCTION CONFIGURATION
# ============================================

# Environment
ENVIRONMENT=production

# CORS Configuration (comma-separated list of allowed origins)
# Example: ALLOWED_ORIGINS=https://scholarshield.vercel.app,https://www.yourdomain.com
ALLOWED_ORIGINS=https://scholarshield.vercel.app

# Trusted Hosts (comma-separated, optional)
# Example: TRUSTED_HOSTS=api.scholarshield.com,*.yourdomain.com
TRUSTED_HOSTS=

# Mock Mode (set to false for production)
MOCK_MODE=false

# ============================================
# NOTES
# ============================================
# - All Azure service keys should be kept secret
# - ALLOWED_ORIGINS must include your frontend URL(s)
# - Set ENVIRONMENT=production for production deployments
# - MOCK_MODE should be false in production

